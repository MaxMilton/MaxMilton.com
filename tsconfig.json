// https://www.typescriptlang.org/docs/handbook/tsconfig-json.html

{
  "extends": "@minna-ui/ts-config",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "importHelpers": true,
    "isolatedModules": true, // Ensure compatibility with sucrase
    "noEmit": true,
    "paths": {
      "##/*": ["src/*"] // Rollup alias
    },
    "target": "esnext"
  },
  "exclude": [
    "__sapper__",
    "**/__tests__/*", // Tests use sucrase
    "node_modules",
    "test/coverage"
  ]
}
