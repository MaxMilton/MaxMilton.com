{
  "name": "maxmilton.com",
  "version": "4.1.0",
  "private": true,
  "description": "My personal blog",
  "license": "MIT",
  "repository": "https://github.com/MaxMilton/MaxMilton.com",
  "author": "Max Milton <max@wearegenki.com>",
  "homepage": "https://maxmilton.com",
  "scripts": {
    "_run": "yarn export && sirv __sapper__/export --dev --single --cors",
    "build": "NODE_ENV=production sapper build",
    "dev": "NODE_ENV=development sapper dev",
    "export": "NODE_ENV=production sapper export --entry '/ /404'",
    "lint": "yarn lint:md && yarn lint:css && yarn lint:js && yarn lint:types",
    "lint:css": "stylelint --report-needless-disables **/*.{css,html,js,md,svelte,svg,ts}",
    "lint:js": "eslint --ext html,js,md,mjs,svelte,svg,ts .",
    "lint:md": "remark --frail --quiet .",
    "lint:types": "tsc --noEmit --allowJs --checkJs",
    "postexport": "mv ./__sapper__/export/404/index.html ./__sapper__/export/404.html",
    "test": "jest --notify --watch",
    "test-ci": "jest --coverage --ci"
  },
  "dependencies": {
    "@polka/send": "1.0.0-next.7",
    "ganalytics": "3.1.3",
    "polka": "1.0.0-next.11",
    "sirv": "1.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "3.1.1",
    "@rollup/plugin-commonjs": "13.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "8.0.1",
    "@rollup/plugin-replace": "2.3.3",
    "@rollup/plugin-typescript": "4.1.2",
    "@types/express": "4.17.6",
    "@types/js-yaml": "3.12.4",
    "@wearegenki/renovate-config": "1.0.0",
    "eslint": "7.2.0",
    "jest": "26.0.1",
    "js-yaml": "3.14.0",
    "minna-tools": "0.36.1-next.57",
    "minna-ui": "0.36.1-next.57",
    "postcss": "7.0.32",
    "postcss-extend-rule": "3.0.0",
    "postcss-scss": "2.1.1",
    "prettier": "2.0.5",
    "rehype-raw": "4.0.2",
    "rehype-shiki": "0.0.8",
    "rehype-slug": "3.0.0",
    "rehype-stringify": "8.0.0",
    "remark-cli": "8.0.0",
    "remark-frontmatter": "2.0.0",
    "remark-parse": "8.0.2",
    "remark-rehype": "7.0.0",
    "rollup": "2.17.0",
    "rollup-plugin-svelte": "5.2.2",
    "rollup-plugin-terser": "6.1.0",
    "sapper": "0.27.16",
    "sirv-cli": "1.0.1",
    "stylelint": "13.6.1",
    "svelte": "3.23.2",
    "to-vfile": "6.1.0",
    "tslib": "2.0.0",
    "typescript": "3.9.5",
    "unified": "9.0.0"
  },
  "browserslist": {
    "production": [
      "extends @minna-ui/browserslist-config"
    ],
    "development": [
      "extends @minna-ui/browserslist-config/dev"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "./node_modules/minna-tools/eslint.js"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "warn",
      "@typescript-eslint/naming-convention": "warn",
      "@typescript-eslint/no-unsafe-assignment": "warn",
      "@typescript-eslint/no-unsafe-call": "warn",
      "@typescript-eslint/no-unsafe-member-access": "warn",
      "@typescript-eslint/no-unsafe-return": "warn"
    }
  },
  "eslintIgnore": [
    "**/node_modules/**",
    "__sapper__/**",
    "test/coverage/**"
  ],
  "jest": {
    "preset": "minna-tools",
    "collectCoverageFrom": [
      "src/**/*.{html,js,svelte,ts}"
    ]
  },
  "postcss": {
    "plugins": {
      "minna-ui/postcss": {
        "unsafe": true
      }
    },
    "parser": "postcss-scss",
    "syntax": "postcss-scss"
  },
  "prettier": "minna-tools/prettier",
  "remarkConfig": {
    "plugins": [
      "minna-tools/remark"
    ]
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "stylelint": {
    "extends": "minna-tools/stylelint",
    "ignoreFiles": [
      "**/node_modules/**",
      "__sapper__/**",
      "test/coverage/**"
    ]
  }
}
