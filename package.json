{
  "name": "maxmilton.com",
  "version": "4.1.0",
  "private": true,
  "description": "My personal blog",
  "license": "MIT",
  "repository": "https://github.com/MaxMilton/MaxMilton.com",
  "author": "Max Milton <max@wearegenki.com>",
  "homepage": "https://maxmilton.com",
  "scripts": {
    "_run": "yarn export && sirv __sapper__/export --dev --single --cors",
    "build": "NODE_ENV=production sapper build",
    "dev": "NODE_ENV=development sapper dev",
    "export": "NODE_ENV=production sapper export --entry '/ /404'",
    "lint": "yarn lint:md && yarn lint:css && yarn lint:js && yarn lint:types",
    "lint:css": "stylelint **/*.{css,html,js,md,svelte,svg,ts}",
    "lint:js": "eslint --ext html,js,md,mjs,svelte,svg,ts .",
    "lint:md": "remark --frail --quiet .",
    "lint:types": "tsc --noEmit --allowJs --checkJs",
    "postexport": "mv ./__sapper__/export/404/index.html ./__sapper__/export/404.html",
    "test": "jest --notify --watch",
    "test-ci": "jest --coverage --ci"
  },
  "dependencies": {
    "@polka/send": "1.0.0-next.7",
    "ganalytics": "3.1.2",
    "polka": "1.0.0-next.11",
    "sirv": "1.0.0-next.2"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "3.0.0",
    "@rollup/plugin-commonjs": "11.0.1",
    "@rollup/plugin-json": "4.0.1",
    "@rollup/plugin-node-resolve": "7.0.0",
    "@rollup/plugin-replace": "2.3.0",
    "@rollup/plugin-typescript": "2.1.0",
    "@types/express": "4.17.2",
    "@types/js-yaml": "3.12.2",
    "@wearegenki/renovate-config": "1.0.0",
    "eslint": "6.8.0",
    "jest": "25.1.0",
    "js-yaml": "3.13.1",
    "minna-tools": "0.35.2-next.58",
    "minna-ui": "0.35.2-next.58",
    "postcss": "7.0.26",
    "postcss-extend-rule": "3.0.0",
    "postcss-scss": "2.0.0",
    "prettier": "1.19.1",
    "rehype-raw": "4.0.1",
    "rehype-shiki": "0.0.6",
    "rehype-slug": "2.0.3",
    "rehype-stringify": "6.0.1",
    "remark-cli": "7.0.1",
    "remark-frontmatter": "1.3.2",
    "remark-parse": "7.0.2",
    "remark-rehype": "5.0.0",
    "rollup": "1.29.1",
    "rollup-plugin-svelte": "5.1.1",
    "rollup-plugin-terser": "5.2.0",
    "sapper": "0.27.9",
    "sirv-cli": "1.0.0-next.3",
    "stylelint": "13.0.0",
    "svelte": "3.18.0",
    "to-vfile": "6.0.0",
    "tslib": "1.10.0",
    "typescript": "3.7.5",
    "unified": "8.4.2"
  },
  "resolutions": {
    "vfile": "^4.0.2"
  },
  "browserslist": {
    "production": [
      "extends @minna-ui/browserslist-config"
    ],
    "development": [
      "extends @minna-ui/browserslist-config/dev"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "./node_modules/minna-tools/eslint.js"
    ]
  },
  "eslintIgnore": [
    "**/node_modules/**",
    "__sapper__/**",
    "test/coverage/**"
  ],
  "jest": {
    "preset": "minna-tools",
    "collectCoverageFrom": [
      "src/**/*.{html,js,svelte,ts}"
    ]
  },
  "postcss": {
    "plugins": {
      "minna-ui/postcss": {
        "unsafe": true
      }
    },
    "syntax": "postcss-scss"
  },
  "prettier": "minna-tools/prettier",
  "remarkConfig": {
    "plugins": [
      "minna-tools/remark"
    ]
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "stylelint": {
    "extends": "minna-tools/stylelint",
    "ignoreFiles": [
      "**/node_modules/**",
      "__sapper__/**",
      "test/coverage/**"
    ]
  }
}
